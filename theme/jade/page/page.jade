    header#masthead.Masthead(role='banner')
      block header
        hgroup.Masthead-Logo
          .Masthead-Logo-Title= title
          .Masthead-Logo-Subtitle= description
        nav.Masthead-Menu
          span.Masthead-Menu-Item
            a(href='/') Home

    main#content.Content(role='main')
      block content

