doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    block title
      title= title
    meta(name='description', content='I write as I learn as I go. A blog on web development, technologies involved and problems solved.')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory
    link(rel='stylesheet', href='/css/style.css')
    link(rel='alternate' type='application/rss+xml' href='https://#{site.domain}/feed/index.xml')
    //- $FIXME: get rid of index.xml
    script(src='/js/vendor/modernizr-2.8.3.min.js')
