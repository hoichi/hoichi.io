extends ./page/page.jade
//-
block h__title
    title= 'i.i / '+page.title
block header
    .b-Masthead__breadcrumbs
        a(href='/') hoichi.io
        = ' / '
    h1= page.title

block content
    if page.content
        p.b-desc!= page.content

    each post in page.posts
        .b-post
            header.b-post__header
                span.b-post__date= cfg.date_short(post.date)
                h2.b-post__title
                    a.b-post__header-link(href='/'+post.url)= post.title
            .b-post__body
                a.b-post__more(href= '/'+post.url)
                    | !{post.excerpt}
            .b-post__meta
                each tag in post.tags
                    a.b-post__tag(href = '/tag/' + tag.slug) ##{tag.title}
